---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="እንቆቅልሽ">
	<main>
		<h2>Welcome to <span class="text-gradient">እንቆቅልሽ</span></h2>
		<p class="instructions">
			በአዝናኝ ጥያቄዎቻችን እራሶን ይፈትሹ፤ይዝናኑ፤ይሸለሙ !!!<br />
			 ካሉት ዘርፎች አንዱን መርጠው ይቀጥሉ 👇
		</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="/meznagna/"
				title="መዝናኛ"
				body=" ስለ ፊልሞች ፤ ሙዚቃ ፤ መፅሃፍት ምን ያህል ያውቃሉ?"
			/>
			<Card
				href="https://astro.build/integrations/"
				title="ታሪክ"
				body="ስለ ሃገራችን ታሪካዊ ሁነቶች ፤ ቅርሶች ፤ ቦታዎች ፤ ሰዎች ያውቃሉ?"
			/>
			<Card
				href="https://astro.build/themes/"
				title="ጠቅላላ ዕውቀት"
				body="ዓለማችን ላይ ስላሉ ሁነቶችስ?"
			/>
			<Card
				href="https://astro.build/chat/"
				title="ስፖርት"
				body="የተለያዩ ስፖርታዊ ጉዳዮችን ምን ያህል ያስተውላሉ?"
			/>
		</ul>
	</main>
</Layout>

<style>
	:root {
		--astro-gradient: linear-gradient(0deg, #FF6600,#FB8C00);
	}

	h2 {
		@apply mx-0 my-8 text-center;
        color: black;
		font-weight: bold;

	}

	main {
		 @apply m-auto p-4;
         max-width: 60ch;
	}
    p {
		text-align: center;
	}
	.text-gradient {
		font-weight: 900;
		background-image: var(--astro-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100% 200%;
		background-position-y: 100%;
		border-radius: 0.4rem;
		animation: pulse 4s ease-in-out infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 80%;
		}
	}

	.instructions {
		@apply rounded-md mx-0 my-4 p-4;
        line-height: 1.6;
		background:linear-gradient(0deg, #FF6600,#FB8C00 );
		color: #fff;
	}

	.instructions code {
		font-size: 0.875em;
		border: 0.1em solid var(--color-border);
		border-radius: rounded text-sm px-1 py-px;
		padding: 0.15em 0.25em;
	}

	.link-card-grid {
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		@apply grid gap-4 p-0;
	}
</style>
