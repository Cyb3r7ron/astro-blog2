---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<Layout title="መዝናኛ">
	<main>
		<h4>ጥያቄ <span class="text-gradient">2/10</span></h4>
		<p class="instructions">
			የወንዶች ጉዳይ ላይ አዕምሮ የሶፋውን አጠጋገን ምን ብሎ ነገራቸው ?
		</p>
		<ul role="list" class="link-card-grid">
			<input type="text" id="fname" name="fname" value=""> <br>
            <button onclick="window.location.href='https://w3docs.com';">መልስ ላክ</button>
		</ul>
	</main>
</Layout>

<style>
	:root {
		--astro-gradient: linear-gradient(0deg, #FFD700, #da6262);
	}

	h4 {
		@apply mx-0 my-8 text-center;
		color:black;
		

	}
	 sup{
		@apply text-yellow-500 font-bold;
	}
    input {
        @apply py-4 px-5 w-auto;
        background-color: #dbd4d4;
        border-radius: 25px;
    }
	
    button{
        @apply h-8 w-20 text-sm bg-yellow-500 p-0 ml-32;
		border-radius:10px;
    }
    main{
		@apply m-auto p-4;
        max-width: 60ch;
	}
    p {
		@apply text-center;
	}
	.text-gradient {
		@apply rounded-md font-black text-xs;
        background-size: 100% 200%;
        background-position-y: 100%;
        animation: pulse 4s ease-in-out infinite;
		background-image: var(--astro-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 80%;
		}
	}

	.instructions {
		@apply rounded-md mx-0 my-4 p-4;
        line-height: 1.6;
		background:linear-gradient(0deg, #FFD700, #da6262);
		color: var(--color-bg);
	}

	.instructions code {
		border: 0.1em solid var(--color-border);
		@apply rounded text-sm px-1 py-px;
	}

	.link-card-grid {
		@apply grid p-0 gap-4;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		
	}
	
	@media (min-width: 640px) { input {margin-left:120px;} }
	@media (min-width: 640px) { input {width:300px;} }
	@media (min-width: 960px) { button {margin-left:260px;} }
	@media (min-width: 1100px) { button {margin-left:260px;} }
</style>
